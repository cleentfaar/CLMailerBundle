{
  "name": "cleentfaar/mailer-bundle",
  "description": "Bundle providing abstraction for mailer services and templates. Let's you create just one (markdown) template to support both HTML and plain text e-mails.",
  "keywords": [
    "email",
    "mailer",
    "symfony",
    "bundle"
  ],
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Cas Leentfaar",
      "homepage": "https://github.com/cleentfaar",
      "email": "info@casleentfaar.com"
    }
  ],
  "require": {
    "php": ">=5.4",
    "symfony/framework-bundle": "~2.3",
    "symfony/swiftmailer-bundle": "~2.3",
    "symfony/translation": "~2.3",
    "symfony/templating": "~2.3",
    "tijsverkoyen/css-to-inline-styles": "~1.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.4",
    "matthiasnoback/symfony-config-test": "~0.2",
    "matthiasnoback/symfony-dependency-injection-test": "~0.7"
  },
  "suggests": {
    "symfony/twig-bundle": "To use (extend) the default layouts",
    "knplabs/knp-markdown-bundle": "Use the markdown filter to make your templates suitable for both HTML and plain-text"
  },
  "autoload": {
    "psr-4": {
      "CL\\Bundle\\MailerBundle\\": ""
    }
  },
  "config": {
    "bin-dir": "bin"
  }
}
